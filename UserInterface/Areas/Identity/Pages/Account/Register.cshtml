@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<!doctype html>
<html lang="en">
<head>
	<title>Login</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/login-form-18/css/style.css">

</head>
<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-5">
					<div class="login-wrap p-4 p-md-5">
						<div class="icon d-flex align-items-center justify-content-center">
							<span class="fa fa-user-o"></span>
						</div>
						<h3 class="text-center mb-4">Sign Up</h3>
						<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="login-form">
							<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
							<div class="form-group">
								<input asp-for="Input.Email" class="form-control rounded-left" aria-required="true" placeholder="Email" />
								<span asp-validation-for="Input.Email" class="text-danger"></span>
							</div>														
							<div class="form-group">
								<select asp-for="Input.BuildingId" asp-items="Model.Buildings" class="form-control rounded-left" placeholder="Building Name">
									<option value="">Select your building</option>
								</select>
								<span asp-validation-for="Input.BuildingId" class="text-danger"></span>
							</div>
							<div class="form-group d-flex">
								<input asp-for="Input.Password" class="form-control rounded-left" aria-required="true" placeholder="Password" />
								<span asp-validation-for="Input.Password" class="text-danger"></span>
							</div>
							<div class="form-group d-flex">
								<input asp-for="Input.ConfirmPassword" class="form-control rounded-leftl" aria-required="true" placeholder="ConfirmPassword" />
								<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
							</div>
							<div class="form-group d-md-flex">
								<div class="w-50">
									<p>Have an account?</p>
								</div>
								<a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a>
							</div>
							<div class="form-group">
								<button href="/Home/Index"type="submit" class="btn btn-primary rounded submit p-3 px-5">Register</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="~/login-form-18/js/jquery.min.js"></script>
	<script src="~/login-form-18/js/popper.js"></script>
	<script src="~/login-form-18/js/bootstrap.min.js"></script>
	<script src="~/login-form-18/js/main.js"></script>

</body>
</html>





