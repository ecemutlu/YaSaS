@page "/Account/Login"
@model LoginModel

@{
	ViewData["Title"] = "Log in";
}
<!doctype html>
<html lang="en">
<head>
	<title>Login</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/login-form-18/css/style.css">
</head>
<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-5">
					<div class="login-wrap p-4 p-md-5">
						<div class="icon d-flex align-items-center justify-content-center">
							<span class="fa fa-user-o"></span>
						</div>
						<h3 class="text-center mb-4">Login</h3>
						<form id="account" method="post">
							<div asp-validation-summary="ModelOnly" class="text-danger login-form" role="alert"></div>
							<div class="form-group">
								<input asp-for="Input.Email" class="form-control rounded-left" aria-required="true" placeholder="Email" />
								<span asp-validation-for="Input.Email" class="text-danger"></span>
							</div>
							<div class="form-group d-flex">
								<input asp-for="Input.Password" class="form-control rounded-left" autocomplete="current-password" aria-required="true" placeholder="Password" />
								<span asp-validation-for="Input.Password" class="text-danger"></span>
							</div>
							<div class="form-group d-md-flex">
								<div class="w-50">
									<label asp-for="Input.RememberMe" class="checkbox-wrap checkbox-primary">
										<input class="form-check-input checkmark" type="checkbox" checked asp-for="Input.RememberMe" />
										@Html.DisplayNameFor(m => m.Input.RememberMe)
										<span class="checkmark"></span>
									</label>									
								</div>
								<div class="w-50 text-md-right">
									<a id="forgot-password" asp-page="./ForgotPassword" asp-route-returnUrl="@Model.ReturnUrl">Forgot Password</a>
								</div>
							</div>
							<div class="form-group d-md-flex">
								<div class="w-50">
									<p>Don't have an account?</p>
								</div>
								<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register now</a>
							</div>
							<div class="form-group">
								<button id="login-submit" href="/Home/Index" type="submit" class="btn btn-primary rounded submit p-3 px-5">Get Started</button>
							</div>
							@* <div>
							<p>
							<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
							</p>
							</div> *@
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="~/login-form-18/js/jquery.min.js"></script>
	<script src="~/login-form-18/js/popper.js"></script>
	<script src="~/login-form-18/js/bootstrap.min.js"></script>
	<script src="~/login-form-18/js/main.js"></script>

</body>
</html>



@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}


